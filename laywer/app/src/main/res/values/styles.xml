<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/united_blue</item>
        <item name="colorPrimaryDark">@color/united_blue</item>
        <item name="colorAccent">@color/united_blue</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
    <style name="BottomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>

    </style>
</resources>
